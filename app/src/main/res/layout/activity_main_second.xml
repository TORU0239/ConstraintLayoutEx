<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/base_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text 1"
        app:layout_constraintEnd_toStartOf="@id/base_txt2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/base_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text 2"
        app:layout_constraintStart_toEndOf="@id/base_txt"
        app:layout_constraintEnd_toStartOf="@id/base_txt3"/>

    <TextView
        android:id="@+id/base_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text 3"
        app:layout_constraintStart_toEndOf="@id/base_txt2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/circular_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Circular 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/circular_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Circular 2"
        app:layout_constraintCircle="@id/circular_txt1"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="90dp"/>

    <TextView
        android:id="@+id/circular_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Circular 3"
        app:layout_constraintCircle="@id/circular_txt1"
        app:layout_constraintCircleAngle="90"
        app:layout_constraintCircleRadius="90dp"/>

    <TextView
        android:id="@+id/circular_txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Circular 4"
        app:layout_constraintCircle="@id/circular_txt1"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="90dp"/>

    <TextView
        android:id="@+id/circular_txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Circular 5"
        app:layout_constraintCircle="@id/circular_txt1"
        app:layout_constraintCircleAngle="270"
        app:layout_constraintCircleRadius="90dp"/>
</android.support.constraint.ConstraintLayout>